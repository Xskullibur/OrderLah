<link href="/css/login.css" rel="stylesheet" type="text/css">
<div class="card-fullcontent">
    <div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-5 col-12" >
            <div class="card shadow p-3 rounded" style="width: 100%;">
                <img class="card-img-top" src="/img/logo.png" alt="OrderLah">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    <section>
                        <form action="/login" method="POST">
                            <div>
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="remember_me" name="remember_me">
                                    <label class="form-check-label" for="remember_me">Remember Me</label>
                                </div>
                                <br>
                                <button type="submit" class="col btn btn-success">Login</button> 
                                <br>
                                <p class="" style="color:grey;"><a href="register" style="color:grey;">Register</a> | <a href="#" style="color:grey;">Lost your password?</a></p>
                                <h6 class="card-title text-center"> - or -</h6>
                                <a href="guestLogin" class="col btn btn-secondary" role="button">Guest</a>
                                <p></p>
                                <a href="auth/google" class="col btn btn-danger float" role="button">Google</a>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
