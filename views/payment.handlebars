<div class="container">
    <div class="row" align="center">
        <div class="col">
            <div class="card my-5">
                <div class="card-header"><h3>1.Confirm Orders</h3></div>
                <div class="card-body">
                    <div class="row">
                        {{> list_menu_items}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" align="center">
        <div class="col">
            <div class="card">
                <div class="card-header"><h3>2.Payment Method</h3></div>
                <div class="card-body">
                    <div id="paypal-button-container"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if({{totalAmount}} === 0){
        showAlert('Cart is empty, items payable by paypal, visa, mastercard, amex')
    }else{
        paypal.Buttons({
            createOrder: function(data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: {{totalAmount}},                                                  
                        }
                    }]
                });
            },
            onApprove: function(data, actions) {                
                return actions.order.capture().then(function(details) {   
                    showAlert('Transaction completed by ' + details.payer.name.given_name + '!')                              
                    return fetch('/confrimPayment', {
                        method: 'post',
                        headers: {
                            'content-type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderID: data.orderID,
                            payerName: details.payer.name.given_name
                        })
                    })                                                         
                })                                                                  
            }
        }).render('#paypal-button-container');
    }
</script>