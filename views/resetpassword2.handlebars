<div class="card-fullcontent">
    <div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-7 col-sm-8 col-12" >
            <div class="card shadow p-3 rounded" style="width: 100%;">
                <div class="card-body">
                    <h2 class="card-title">Reset password</h2>
                    <p>Enter your new password</p>
                    <section>
                        <form action="/resetpassword/{{user.id}}" method="POST">
                            <div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="newpassword" name="newpassword" aria-describedby="emailHelp" placeholder="Enter password">
                                </div>
                                <br>
                                <button type="submit" class="col btn btn-success">Proceed</button> 
                                <br>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>