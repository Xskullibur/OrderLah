
<link rel="stylesheet" href="/css/admin.css">
{{#if displayAlert}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <center><strong>{{this.displayAlert}}</strong></center>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
{{/if}}
<br>

<center>
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-2">
            <input type="text" class="form-control" aria-describedby="" placeholder="Search Menu" style="width: 200px;">
            <br>
        </div>
        <div class="col-sm-1">
            <button type="button" class="red-btn" data-toggle="modal" data-target="#createStall">Add</button>
        </div>
        <div class="col-sm-5">
        </div>
    </div>
</center>

<br><br>
<div class="row" style="padding-left: 5em">
    {{#if displayStallowner}}
            {{#each displayStallowner}}
                <div class="col-xs-6">
                    <div class="column">
                        <div class="container">
                            <div class="card">
                                <br>                 
                                <div class="card__image-container">
                                    <center><img class="card__image" src="/uploads/{{this.username}}.jpeg" onerror="this.src='http://cliquecities.com/assets/no-image-e3699ae23f866f6cbdf8ba2443ee5c4e.jpg';" height="140" width="225" alt="" style="max-width: 65%; border-radius: 50%;"></center>
                                </div>
                                <br>
                                <div class="card__content">
                                    <center><h4 class="card__title">{{this.username}}</h4></center>
                                    <center>
                                        <button type="button" class="red-btn" data-toggle="modal" data-target="#updateForm">
                                            <font size="1">Edit</font>
                                        </button>                                                                    
                                        <button type="button" class="red-btn" data-toggle="modal" data-target="#freeze{{this.id}}">
                                            <font size="1">Lock</font>
                                        </button> 
                                        <button type="submit" class="red-btn" data-toggle="modal" data-target="#reset{{this.id}}" title="comments and rating">
                                            <font size="1">Reset</font>
                                        </button>                                        
                                    </center>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                </div>  
        {{/each}}
    {{/if}}
</div>

{{#if displayStallowner}}
    {{#each displayStallowner}}
        <div class="modal fade" id="freeze{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">lock account for {{this.username}}?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="POST" action="/admin/lockAccount">
                        <br>
                        <input type="hidden" id="userID" name="userID" value="{{this.id}}"> 
                        <div class="modal-body">
                            <center>
                                <button type="submit" class="red-btn">Yes</button>
                                <button data-dismiss="modal" class="red-btn">No</button>  
                            </center>
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

{{#if displayStallowner}}
    {{#each displayStallowner}}
        <div class="modal fade" id="reset{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">reset password for {{this.username}}?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="POST" action="/admin/resetPassword">
                        <br>
                        <input type="hidden" id="userID" name="userID" value="{{this.id}}"> 
                        <div class="modal-body">
                            <center>
                                <button type="submit" class="red-btn">Yes</button>
                                <button data-dismiss="modal" class="red-btn">No</button>  
                            </center>
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

<div class="modal fade" id="createStall" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Stall</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" action="/admin/submitStall">
                <div class="modal-body">
                    <br>                   
                    <div class="form-group row">
                        <label for="username" class="col-sm-2 col-form-label">username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="username" id="username" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="firstName" id="firstName" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="lastName" id="lastName" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" name="email" id="email" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="birthday" class="col-sm-2 col-form-label">Birthday</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" name="birthday" id="birthday" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" name="phone" id="phone" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="stallName" class="col-sm-2 col-form-label">Stall Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="stallName" id="stallName" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="description" id="description" required>
                        </div>
                    </div>                                                     
                    <input type="hidden" id="holder" name="holder"  value="">
                    <div class="modal-footer">
                        <button type="submit" class="red-btn">Create</button>
                    </div>
            </form>
        </div>
    </div>
</div>





