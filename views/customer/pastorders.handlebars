<div class="row">
<div class="col-md-12 p-3">
<div class="col p-3" style="width: 100%">

    <div class="row pb-4">
        <div class="col">
            <div class="card text-white bg-light">
                <div class="card-body container-fluid">

                    <form class="form" action="/pastOrders">
                        <div class="form-row">
                            <div class="form-group col">
                                {{> date_range_picker}}
                            </div>
                        </div>

                        <div class="form-row float-right">
                            <div class="form-group col">
                                <a class="btn btn-outline-danger" href="/pastOrders">Clear</a>
                                <button class="btn btn-outline-danger" id="filterSubmitBtn">Filter</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

    {{#if currentOrders}}
        <div class="row justify-content-center">
            <div class="col-md-12">

                <div class="list-group">

                {{#each currentOrders as |order|}}
                    <div class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 font-weight-bold">
                                Order: {{substringTo5 order.publicOrderID}}
                                {{#ifCondition order.status '!=' 'Collection Confirmed'}}
                                <div class="col-2 d-flex">
                                    <div class="live-clickable" data-order-id="{{order.publicOrderID}}">
                                        <div class="ring-container" style="min-height: 40px; min-width: 40px;">
                                            <div class="ring small-ping"></div> <a class="dot"></a>
                                        </div>
                                        <div><span class="text-bold" style="position: absolute;top:16%;">Live</span></div>
                                    </div>
                                </div>
                                {{/ifCondition}}
                            </h5>
                            <small class="text-right font-weight-bold">
                                <div class="row">
                                    <div class="col">
                                        Order Timing: {{formatDate order.orderTiming "hh:mm:ss"}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        User ID: {{order.userId}}
                                    </div>
                                </div>
                            </small>
                        </div>
                        <p class="mb-1">
                            {{#each order.menuItems as |item|}}
                            <div class="row">
                                <div class="col">
                                    {{item.itemName}} x{{item.orderItem.quantity}} @ ${{item.price}}
                                </div>
                                <div class="col text-right">
                                    <button class="btn btn-sm btn-outline-success my-2 my-sm-0" type="submit">View product page</button>
                                    <button class="btn btn-sm btn-outline-success my-2 my-sm-0" type="submit" onclick="location.href='/review/{{id}}/{{order.id}}';">Review order</button>
                                </div>
                            </div>
                            {{/each}}
                        </p>
                        <small>Total Amount: ${{calcOrderTotal order}}</small>
                    </div>

