<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Add Item</button>




{{#if item}}
        {{#each item}}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/uploads/sample.jpg" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.itemName}}  ${{this.price}}</h5>
                    <p class="card-text">{{this.itemDesc}}</p>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Edit</button>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Delete</button>
                </div>
            </div>
        {{/each}}
{{/if}}


