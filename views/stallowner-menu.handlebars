
<link rel="stylesheet" href="/css/stallowner.css">
{{#if displayAlert}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <center><strong>{{this.displayAlert}}</strong></center>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
{{/if}}

<br>
<center>   
    <h2>{{stall.stallName}}</h2>
    <br>
    <div class="row">
        <div class="col-sm-4">           
        </div>
        <div class="col-sm-2">
            <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Search Menu"
                style="width: 200px;">
            <br>
        </div>
        <div class="col-sm-1">
            <button type="button" class="red-btn" data-toggle="modal" data-target="#createForm">Add</button>
        </div>
        <div class="col-sm-5">
        </div>
    </div>
</center>
<br><br>
<div class="row" style="padding-left: 5em">
    {{#if item}}
            {{#each item}}
                <div class="col-xs-6">
                    <div class="column">
                        <div class="container">
                            <div class="card">
                                <div class="card__image-container shimmerBG media">
                                    <center><img class="card__image" src="/uploads/{{this.image}}" onerror="this.src='http://cliquecities.com/assets/no-image-e3699ae23f866f6cbdf8ba2443ee5c4e.jpg';" height="140" width="225" alt="" title="{{this.itemDesc}}"></center>
                                </div>
                                <div class="card__content">
                                    <br>
                                    <center>
                                         <h6 class="card__title">{{this.itemName}}</h6>
                                         <h6 class="card__title">${{this.price}}</h6>
                                        <button type="button" class="red-btn" data-toggle="modal" data-target="#updateForm{{this.id}}" title="edit">
                                            <font size="1">Edit</font>
                                        </button>                                                                                            
                                        <button type="submit" class="red-btn" data-toggle="modal" data-target="#deleteForm{{this.id}}" title="delete">
                                            <font size="1">Delete</font>
                                        </button>
                                        <button type="submit" class="red-btn" data-toggle="modal" data-target="#commentForm{{this.id}}" title="comments and rating">
                                           <font size="1">Review</font>
                                        </button>                                             
                                    </center>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                </div>  
        {{/each}}
    {{/if}}
</div>

<div class="modal fade" id="createForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add menu item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" action="/stallOwner/submitItem" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="modal-body">
                    <br>
                    <div class="form-group row">
                        <label for="itemName" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="itemName" id="itemName" pattern="[a-zA-Z]+" maxlength="50"  required> 
                            <div class="valid-feedback">Valid</div>
                            <div class="invalid-feedback">required, letters only</div>                                                    
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="itemPrice" class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                            <input type="number" step=".01" min="0" class="form-control" name="itemPrice" id="itemPrice" placeholder="enter price" required>
                            <div class="valid-feedback">Valid</div>
                            <div class="invalid-feedback">required</div>
                        </div>                       
                    </div>
                    <div class="form-group row">
                        <label for="itemDescription" class="col-sm-2 col-form-label">Desc</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="itemDescription" id="itemDescription" placeholder="enter description" maxlength="255" required>
                            <div class="valid-feedback">Valid</div>
                            <div class="invalid-feedback">required</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 imgUp">
                            <div class="imagePreview"></div>                            
                                <input type="file" class="uploadFile img" name="itemImage" id="itemImage" accept="image/png,image/jpeg,image/jpg">                                
                            </div>
                    </div>                  
                    <div class="modal-footer">
                        <button type="submit" class="red-btn">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#if item}}
    {{#each item}}
        <div class="modal fade" id="updateForm{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Update Menu Item</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="POST" action="/stallOwner/updateItem" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <br>
                        <div class="modal-body">
                        <div class="form-group row">        
                            <label for="itemName" class="col-sm-2 col-form-label">Name</label> 
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="itemName" id="itemName" pattern="[a-zA-Z]+" maxlength="50" value="{{this.itemName}}" required>
                                <div class="valid-feedback">Valid</div>
                                <div class="invalid-feedback">required, letters only</div>
                            </div>
                        </div>
                        <div class="form-group row">                               
                            <label for="itemPrice" class="col-sm-2 col-form-label">Price</label>
                            <div class="col-sm-10">                     
                                <input type="number" step=".01" min="0" class="form-control" name="itemPrice" id="itemPrice" value="{{this.price}}" required>
                                <div class="valid-feedback">Valid</div>
                                <div class="invalid-feedback">required</div>
                            </div>
                        </div>
                        <div class="form-group row">                      
                            <label for="itemDescription" class="col-sm-2 col-form-label">Desc</label> 
                            <div class="col-sm-10">                      
                                <input type="text" class="form-control" name="itemDescription" id="itemDescription" maxlength="255" value="{{this.itemDesc}}" required> 
                                <div class="valid-feedback">Valid</div>
                                <div class="invalid-feedback">required</div> 
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 imgUp">
                                <div class="imagePreview" style="background: url(/uploads/{{this.image}}); background-size: 225px 140px;"></div>                            
                                    <input type="file" class="uploadFile img" name="itemImage" id="itemImage" accept="image/png,image/jpeg,image/jpg">
                                </div>
                        </div>                       
                        <input type="hidden" id="itemID" name="itemID" value="{{this.id}}">
                        <input type="hidden" id="imgName" name="imgName" value="{{this.image}}"> 
                        <div class="modal-footer">
                            <button type="submit" class="red-btn">Update</button>  
                        </div> 
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

{{#if item}}
    {{#each item}}
        <div class="modal fade" id="deleteForm{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Are you sure to delete?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="POST" action="/stallOwner/deleteItem">
                        <br>
                        <input type="hidden" id="itemID" name="itemID" value="{{this.id}}"> 
                        <div class="modal-body">
                            <center>
                                <button type="submit" class="red-btn">Yes</button>
                                <button data-dismiss="modal" class="red-btn">No</button>  
                            </center>
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

{{#if item}}
    {{#each item}}
        <div class="modal fade" id="commentForm{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Show review for {{this.itemName}}?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="POST" action="/stallOwner/viewComment">
                        <br>
                        <input type="hidden" id="itemID" name="itemID" value="{{this.id}}"> 
                        <div class="modal-body">
                            <center>
                                <button type="submit" class="red-btn">Yes</button>
                                <button data-dismiss="modal" class="red-btn">No</button>  
                            </center>
                        </div>            
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}

