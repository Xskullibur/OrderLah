
<link rel="stylesheet" href="/css/card.css">
<button type="button" class="red-btn" data-toggle="modal" data-target="#createForm">Add Item</button>
<div class="row">
    {{#if item}}
            {{#each item}}
                <div class="column">
                    <div class="container">
                        <div class="card">
                            <div class="card__image-container shimmerBG media">
                                <img class="card__image" src="https://images.unsplash.com/photo-1519999482648-25049ddd37b1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2126&q=80" height="140" width="225" alt="">
                            </div>

                            <div class="card__content">
                                <h6 class="card__title">{{this.itemName}}     ${{this.price}}</h3>
                                <p>{{this.itemDesc}} </p>
                                <center>
                                    <button type="button" class="red-btn" data-toggle="modal" data-target="#updateForm">Edit</button>
                                    <button type="button" class="red-btn" data-toggle="modal">Delete</button>
                                </center>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
        {{/each}}
    {{/if}}
</div>

