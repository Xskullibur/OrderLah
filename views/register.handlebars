
<div class="container" style="position: relative; top: 10vh; width:">
    <div class="row justify-content-center">
        <div class="col-md-5 col-sm-3">
            <div class="card shadow p-3 rounded" style="width: 100%;">
                <svg width="100%" height="100">
                    <circle class="progress-circle-1" cx="50" cy="50" r="40" stroke="#D80416" stroke-width="2" fill="white" />
                    {{!-- <rect x="50"  width="400" height="100"  /> --}}
                    <circle class="progress-circle-2" cx="50%" cy="50" r="40" stroke="#D80416" stroke-width="2" fill="white" />
                    <circle class="progress-circle-3" cx="100%" cy="50" r="40" stroke="#D80416" stroke-width="2" fill="white" style="transform: translateX(-50px);"/>
                </svg>
                <div class="card-body">
                    <h2 class="card-title text-center">Register</h2>
                    <section>
                        <form action="/login" method="POST">
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="rememberme">
                                <label class="form-check-label" for="rememberme">Remember Me</label>
                            </div>
                            <button type="submit" class="btn btn-outline-success float-right">Login</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>