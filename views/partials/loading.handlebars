<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.5.0/velocity.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/1.5.0/velocity.ui.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/css/loading.css"> 
<script>
    $(document).ready(function(){
        //Move loading-content down
        var loading_content = $('#loading-content');
        var loading_body = $('#loading-body');
        $.Velocity.animate(loading_content, {
            top: '25vh'
        }, {duration: 1000, easing: "spring"}).then(() => {
            //Slide up
            $.Velocity.animate(loading_body, {
                top: '-100vh'
            }, {delay: 500,duration: 2000}).then(() => {
                //Do staggering animations for the items
                doStaggerAnimation();
            })
        });
    });  
</script>
<div id="loading-body" class="loading-bg">
    <div id="loading-content" class="container" style="position:relative;">
        <div class="row">
            <div class="col text-center">
                <img class="loading-img-center" src="/img/logo.png" />
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <div class="spinner-border text-danger" role="status">
                <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <span>A truly seamless system...</span>
            </div>
        </div>
    </div>
</div>