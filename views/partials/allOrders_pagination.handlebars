<style>
    .page-item.active .page-link {
        color: #fff;
        background-color: #FF0000;
        border-color: pink;
    }

    .page-item .page-link {
        color: #FF0000;
    }
</style>

<nav aria-label="Order Page">
    <ul class="pagination justify-content-end">
        <li class="page-item">
            <a id="previous" class="page-link font-weight-bold" href="../{{getPrevious currentPage}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{#for pages}}
            <li class="page-item {{ifEquals ../currentPage this "active" ""}}"><a class="page-link" href="./{{this}}">{{this}}</a></li>
        {{/for}}

        <li class="page-item">
            <a id="next" class="page-link font-weight-bold" href="{{getNext currentPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>