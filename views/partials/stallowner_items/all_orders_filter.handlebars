<div class="card bg-light">
    
    <div class="card-body">
        <h4 class="card-title">Filter Orders</h4>
        <form action="/stallOwner/allOrders/1" class="p-3" method="GET">

            {{!-- Inputs --}}
            <div class="form-row">
                <div class="form-group col">
                    <label for="orderNo">Order No.</label>
                    <input type="number" name="orderNo" id="orderNo" class="form-control" placeholder="eg. 1" aria-describedby="Order Number" value="{{#if orderFilter}}{{orderFilter}}{{/if}}">
                </div>

                <div class="form-group col">
                    <label for="date">Order Date</label>
                    <input type="date" name="orderDate" id="orderDate" class="form-control" placeholder="01/06/2019" aria-describedby="Order Date" value="{{#if dateFilter}}{{dateFilter}}{{/if}}">
                </div>
            </div>

            {{!-- Submit Btn --}}
            <div class="form-row">
                <div class="form-group col text-right">
                    <button type="reset" class="btn btn-outline-danger" onclick="document.getElementById('orderNo').disabled = false; document.getElementById('orderDate').disabled = false;">Clear</button>
                    <button type="submit" class="btn btn-outline-danger" id="filterSubmitBtn">Filter</button>
                </div>
            </div>

        </form>
    </div>
</div>

<script>

    let orderNo = document.getElementById('orderNo')
    let orderDate = document.getElementById('orderDate')

    orderNo.oninput = function() {
        if (this.value.length) {
            orderDate.disabled = true
        }
        else{
            orderDate.disabled = false
        }
    }

    orderDate.oninput = function() {
        if (this.value.length) {
            orderNo.disabled = true

        }
        else{
            orderNo.disabled = false
        }
    }

</script>