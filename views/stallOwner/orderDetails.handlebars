<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
    var OrdersPerItem = {{{jsonStringfy OrdersPerItem}}};
    var AvgRatingPerItem = {{{jsonStringfy AvgRatingPerItem}}};
</script>
<script src="/js/createChart.js"></script>

<div class="container" style="position: relative; top: 5vh; width:">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="px-md-5 pb-md-5 px-sm-3 pb-sm-3" style="width: 100%;">

                <div class="card-deck">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Number of Items Bought:</h4>
                            <canvas id="OrdersPerItem"></canvas>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Average Rating Per Item</h4>
                            <canvas id="ARPI"></canvas>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">

                        <h4 class="card-title">View Orders</h4>
                        {{!-- Filter --}}
                        <div class="container mt-3">
                            <div class="col">
                                <form action="/stallOwner/allOrders/1" class="p-3" method="GET">

                                    {{!-- Inputs --}}
                                    <div class="form-row">
                                        <div class="form-group col">
                                            <label for="orderNo">Order No.</label>
                                            <input type="number" name="orderNo" id="orderNo" class="form-control" placeholder="eg. 1" aria-describedby="Order Number" value="{{#if orderFilter}}{{orderFilter}}{{/if}}">
                                        </div>

                                        <div class="form-group col">
                                            <label for="date">Order Date</label>
                                            <input type="date" name="orderDate" id="orderDate" class="form-control" placeholder="01/06/2019" aria-describedby="Order Date" value="{{#if dateFilter}}{{dateFilter}}{{/if}}">
                                        </div>
                                    </div>

                                    {{!-- Submit Btn --}}
                                    <div class="form-row">
                                        <div class="form-group col text-right">
                                            <a href="/stallOwner/allOrders/1" class="btn btn-outline-danger">Clear</a>
                                            <button type="submit" class="btn btn-outline-danger" id="filterSubmitBtn">Apply Filter</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>

                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>