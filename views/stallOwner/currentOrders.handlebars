<div class="container" style="position: relative; top: 5vh; width:">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow p-3 rounded" style="width: 100%;">

                <div class="accordion" id="accordion"  role="tablist" aria-multiselectable="true">

                    {{#each currentOrders as |order|}}
                        <div class="card">
                            <div class="card-header" role="tab" id="head{{@index}}">
                                    <button class="btn btn-link container-fluid" type="button" data-toggle="collapse"data-target="#content{{@index}}" aria-expanded="false" aria-controls="content{{@index}}">
                                        <span class="fa-pull-left">
                                            {{{order.id}}}) |
                                            {{#each order.orderItems as |item|}}
                                                Menu Item ID:{{item.menuItemId}} x{{item.quantity}} |
                                            {{/each}}
                                        </span>
                                        <span class="fa-pull-right">{{order.orderTiming}}</span>
                                    </button>
                            </div>
                            <div id="content{{@index}}" class="collapse {{#if @index}}{{else}}show{{/if}}" role="tabpanel" data-parent="#accordion" aria-labelledby="head{{@index}}">
                                <div class="card-body container">
                                    {{#each order.item as |item|}}
                                    <div class="card">
                                        <img class="card-img-top" src="holder.js/100px180/" alt="">
                                        <div class="card-body">
                                            <div class="container">
                                                <div class="row justify-content-between">
                                                    <h5 class="col p-0">Menu Item Id: {{item.menuItemId}} x{{item.quantity}} @ Price</h5>
                                                    <h5 class="col text-right">Total Price</h5>
                                                </div>
                                                <div class="row">
                                                    <p class="card-text">Price: -</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    {{/each}}
                                    <hr>    
                                    <div class="row">
                                        <span class="col">Total Price</span>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>