<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Unlock {{displayID.username}}?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="POST" action="/admin/unlockAccount">
            <br>
            <input name="csrf" type="hidden" value="{{csrf}}"/>
            <input type="hidden" id="userID" name="userID" value="{{displayID.id}}">
            <div class="modal-body">
                <center>
                    <button type="submit" class="btn btn-outline-danger">Yes</button>
                    <button data-dismiss="modal" class="btn btn-outline-danger">No</button>
                </center>
            </div>
        </form>
    </div>
</div>