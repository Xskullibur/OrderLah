
<link rel="stylesheet" href="/css/admin.css">
<br>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <center>
                <form method="POST" action="/admin/filterItem" class="form-inline">
                    <input type="text" class="form-control" name="filterName" id="filterName" placeholder="Search StallOwner" style="width: 180px;">
                    <button type="submit" class="btn btn-outline-success" style="margin-left: 15px;">Search</button>
                </form>
            </center>
            <br>         
        </div>
        <div class="col-sm-12 col-md-3 col-lg-4">
            <center>
                <form method="GET" action="/admin/adminPanel">
                    <button type="submit" class="btn btn-outline-success">Show All</button>
                </form>
            </center>
            <br>
        </div>
        <div class="col-sm-12 col-md-3 col-lg-4">
            <center>
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" onclick="showCustomDialog('/admin/showCreateStall')">Add Stall</button>
            </center>
            <br>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="card border-secondary" style="background-color: #fff;  width: 100% !important; height: 100% !important;">
                <center><h2>Stall Management</h2></center>
                <br>
                <div class="row">
                        {{#if displayStallowner}}
                            {{#each displayStallowner}}
                                <div class="col-sm-12 col-md-6 col-lg-4">
                                    <div class="column">
                                        <div class="container">
                                            <div class="card">
                                                <br>                 
                                                <div class="card__image-container">
                                                    <center><img class="card__image" src="/img/profiles/{{this.id}}.png" onerror="this.src='http://cliquecities.com/assets/no-image-e3699ae23f866f6cbdf8ba2443ee5c4e.jpg';" height="180" width="180" alt="" style="max-width: 65%; border-radius: 50%;"></center>
                                                </div>
                                                <br>
                                                <div class="card__content">
                                                    <center><h4 class="card__title">{{this.username}}</h4></center>
                                                    <center>                                                                                                         
                                                        <button type="button" class="btn btn-outline-secondary" data-toggle="modal" onclick="showCustomDialog('/admin/showLock/{{this.id}}')">Lock</button> 
                                                        <button type="button" class="btn btn-outline-secondary" data-toggle="modal" onclick="showCustomDialog('/admin/showDelete/{{this.id}}')">Reset</button>                                        
                                                    </center>
                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                    </div>
                                </div>  
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<br>
{{#if displayLocked}}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="card border-secondary"
                style="background-color: #fff;  width: 100% !important; height: 100% !important;">
                <center>
                    <h2>Locked Stalls</h2>
                </center>
                <br>
                <div class="row">                  
                    {{#each displayLocked}}
                        <div class="col-sm-12 col-md-6 col-lg-4">
                            <div class="column">
                                <div class="container">
                                    <div class="card">
                                        <br>
                                        <div class="card__image-container">
                                            <center><img class="card__image" src="/img/profiles/{{this.id}}.png"
                                                    onerror="this.src='http://cliquecities.com/assets/no-image-e3699ae23f866f6cbdf8ba2443ee5c4e.jpg';"
                                                    height="180" width="180" alt="" style="max-width: 65%; border-radius: 50%;"></center>
                                        </div>
                                        <br>
                                        <div class="card__content">
                                            <center>
                                                <h4 class="card__title">{{this.username}}</h4>
                                            </center>
                                            <center>
                                                <button type="button" class="btn btn-outline-secondary" data-toggle="modal" onclick="showCustomDialog('/admin/showUnlock/{{this.id}}')">Unlock</button>
                                                <button type="button" class="btn btn-outline-secondary" data-toggle="modal" onclick="showCustomDialog('/admin/showDelete/{{this.id}}')">Reset</button>
                                            </center>
                                        </div>
                                    </div>
                                </div>
                                <br>
                            </div>
                        </div>
                    {{/each}}                    
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}} 
<br>


<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>



