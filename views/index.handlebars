<link rel="stylesheet" type="text/css" href="css/index.css"/>
{{!-- Styling for menu_item.handlebars --}}
<link rel="stylesheet" type="text/css" href="css/menu_item.css"/>
<div style="min-height: 1000px; width: 100vw; max-width: 100%;">
    <div class="container-fluid p-5">
        <div class="row d-md-none">
            <div class="col">
                <ul class="menu-list list-group list-group-horizontal text-center" >
                    <li class="category-list-item list-group-item"><div>Item 1</div></li>
                    <li class="category-list-item list-group-item"><div>Item 2</div></li>
                    <li class="category-list-item list-group-item"><div>Item 3</div></li>
                    <li class="category-list-item list-group-item"><div>Item 4</div></li>
                    <li class="category-list-item list-group-item"><div>Item 5</div></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-3 d-none d-md-block">
                <div class="container">
                    <div class="row">
                        <div class="col-4 offset-8">
                                <div class="position-fixed">
                                <ul class="menu-list list-group list-group-flush text-center" >
                                    <li class="category-list-item list-group-item"><div>Item 1</div></li>
                                    <li class="category-list-item list-group-item"><div>Item 2</div></li>
                                    <li class="category-list-item list-group-item"><div>Item 3</div></li>
                                    <li class="category-list-item list-group-item"><div>Item 4</div></li>
                                    <li class="category-list-item list-group-item"><div>Item 5</div></li>
                                </ul>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col"> 
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h2>Recommended</h2><br>
                            <hr>
                        </div>
                    </div>
                    {{!-- Filter chips --}}
                    <div class="row">
                        <div class="col">
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{#each size}}
                                {{> menu_items/menu_item index=@index}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- Bottom Order items --}}
    {{> bottom_list}}
</div>
<script src="js/menu_item.js" type="text/javascript"></script>